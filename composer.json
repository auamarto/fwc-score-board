{
    "name": "auamarto/fwc-score-board",
    "description": "Simple in-memory score board",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FwcScoreBoard\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Szymon Kunowski",
            "email": "szymon.kunowski@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.38",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests",
        "phpcs": "./vendor/bin/phpcs --standard=phpcs.xml ./",
        "php-cs-fixer": "./vendor/bin/php-cs-fixer fix src",
        "phpstan": "./vendor/bin/phpstan analyse ./src"
    },
    "require": {
        "php": "^8.1",
        "ramsey/uuid": "^4.7"
    }
}
